page {
    background-image: url('https://tvax1.sinaimg.cn/large/008tUvTqly1hf61kt7rxyj31o02xiar6.jpg');
    background-repeat: no-repeat;
    background-size: 100% 100%;
    -moz-background-size: 100% 100%;
}

.container {
    padding: 20rpx;
    /* border-top: 1rpx solid #e5e5e5; */
}

.header {
    display: flex;
    align-items: center;
    border: 1rpx solid #e0e0e0;
    border-radius: 10rpx;
    box-shadow: 0 0 5rpx #e0e0e0;
    margin-bottom: 20rpx;
    padding: 20rpx;
}

.header .plus {
    width: 41rpx;
    height: 41rpx;
    margin-right: 20rpx;
}

.header .new-todo {
    flex: 1;
    font-size: 28rpx;
    font-weight: bold;
    color: white;
}

.todos {
    border: 1rpx solid #e0e0e0;
    border-radius: 10rpx;
    box-shadow: 0 0 5rpx #e0e0e0;
}

.todos .item {
    display: flex;
    align-items: center;
    padding: 20rpx;
    border-bottom: 1rpx solid #e0e0e0;
}

.todos .item:last-child {
    border-bottom: 0;
}

.todos .item .name {
    flex: 1;
    font-size: 30rpx;
    font-weight: bold;
    color: #444;
}

.todos .item.completed .name {
    text-decoration: line-through;
    color: #888;
    font-weight: bold;
}

.todos .item .checkbox {
    margin-right: 10rpx;
}

.todos .item .remove {
    cursor: pointer;
}

.footer {
    display: flex;
    justify-content: space-between;
    margin: 30rpx 0;
    padding: 0 10rpx;
    font-size: 26rpx;
    color: #777;
    font-weight: bold;
}

.footer .btn {
    cursor: pointer;
}

.empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-weight: bold;
}

.empty .title {
    font-size: 60rpx;
    margin: 200rpx 50rpx 50rpx;
    color: white;
    font-family: consolas, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.empty .content {
    color: white;
    text-align: center;
    font-size: 40rpx;
    font-weight: bold;
    font-family: consolas, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}