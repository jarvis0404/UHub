/* my addition */

.hand-in {
    display: flex;
    justify-content: flex-end;
    /* 水平居中 */
}

.hand-in-item {
    height: 30px;
    width: 30px;
    cursor: pointer;
    transition: .2s;
}

/* 喜欢和评论css */
.avter-share-container {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.like-container {
    display: flex;
    flex-direction: row;
    margin-left: 40rpx;
    align-items: center
}

.number {
    color: #666;
    font-weight: bold;
    font-size: 24rpx;
    margin-left: 12rpx;
}

/*  */
.content-name {
    font-size: 28rpx;
    font-family: 'Segoe UI', Tahoma, Verdana, sans-serif, Verdana, sans-serif;
    font-weight: 400;
    color: rgba(69, 82, 107, 1);
    line-height: 20px;
    margin-left: 8px;
}

.card {
    margin: 10rpx auto !important;
}

.right-card {
    height: 180rpx !important;
    width: 220rpx !important;
    border-radius: 12rpx !important;
}

.content {
    margin-top: 10rpx;
    color: #666;
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 5;
    font-family: 'Segoe UI', Tahoma, Verdana, sans-serif, Verdana, sans-serif;
}

.avter-content {
    margin-top: 10rpx;
    color: #333;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    /* -webkit-line-clamp: 4;  文本最多行数 */
    font-family: "JetBrains Mono", "Fira Code", "Cascadia Code", Menlo, "Ubuntu Mono", Consolas, HYZhengYuan;
}


.image-box {
    width: 100%;
    height: 100%;
    margin: 10px auto;
    display: flex;
    justify-content: center;
    /*水平方向的居中*/
    /* border: 1px solid grey; */
}