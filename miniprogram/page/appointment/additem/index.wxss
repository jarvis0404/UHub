page {
    background-color: #fbd974;
}


.sum-container {
    display: grid;
    grid-template-columns: auto auto auto;
    padding: 10px;
    height: 24px;
    border: 1px solid black;
    border-radius: 40px;
    box-shadow: 3px 2px 2px black;
    background-color: snow;
    margin: 10px;
}

.sum-container > view {
    background-color: snow;
    /* border: 1px solid black; */
}

.detail{
    border: 2px solid black;
    border-radius: 5px;
    box-shadow: 1px 1px 1px black;
    margin: 10px;
    padding: 10px;
}

/* 选择样式 */
.not {
    /* height: 25px; */
    /* width: 10vh; */
    border: 1px solid black;
    border-radius: 15rpx;
    background: linear-gradient(to left, white 0%, white 80%, #F49602 80%, #F49602 100%);
    box-shadow: 2px 1px 1px black;
}

.yes {
    /* height: 25px; */
    /* width: 10vh; */
    border: 1px solid black;
    color: white;
    border-radius: 15rpx;
    background-color: #F49602;
    box-shadow: 2px 1px 1px black;
}

.hover {
    transform: scale(0.9,0.9);
}

.grid-container>view {
    /* background-color: rgba(255, 255, 255, 0.8); */
    text-align: center;
    padding: 10px 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    /* font-size: 30px; */
    font-weight: bold;
}

.grid-container {
    display: grid;
    /* 设置4列 */
    grid-template-columns: auto auto auto auto;
    /* 设置2行 */
    grid-template-rows: auto auto;
    grid-gap: 5rpx 15px;
    background-color: #fbd974;
    padding: 5px;
}

.my_button {
    text-align: center;
    height: 50px;
    line-height: 50px;
    font-weight: bold;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    color: white;
    margin: 10px;
    border: 1px solid black;
    border-radius: 40px;
    box-shadow: 3px 2px 2px black;
}

.name {
    margin: 10px;
    border: 1px solid black;
    border-radius: 10px;
    box-shadow: 3px 2px 2px black;
    height: 30px;
}

.my_button_hover {
    text-align: center;
    height: 50px;
    line-height: 50px;
    font-weight: bold;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    color: white;
    margin: 10px;
    border: 1px solid black;
    border-radius: 40px;
    box-shadow: 3px 2px 2px black;
    transform: scale(0.9,0.9);
}